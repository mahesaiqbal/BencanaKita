<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/midnight_blue"
        tools:context=".ui.activity.MenuActivity">

    <LinearLayout
            android:id="@+id/new_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/less_rounded_yellow">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/less_rounded_white"
                android:src="@drawable/directory_file"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="INFORMASI TERBARU"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:fontFamily="@font/sourcesanspro_semi_bold"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/documentation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/less_rounded_yellow">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/less_rounded_white"
                android:src="@drawable/camera"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="DOKUMENTASI"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:fontFamily="@font/sourcesanspro_semi_bold"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/less_rounded_yellow">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/less_rounded_white"
                android:src="@drawable/video"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="VIDEO"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:fontFamily="@font/sourcesanspro_semi_bold"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/less_rounded_yellow">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/less_rounded_white"
                android:src="@drawable/map"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="PETA TERDAMPAK"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:fontFamily="@font/sourcesanspro_semi_bold"/>

    </LinearLayout>

</LinearLayout>