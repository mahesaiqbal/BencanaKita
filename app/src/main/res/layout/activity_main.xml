<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.MainActivity">

    <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="16dp">

        <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:src="@drawable/logo"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aplikasi\nBencana\nKita"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_toRightOf="@id/logo"
                android:fontFamily="@font/sourcesanspro_bold"/>
    </RelativeLayout>

    <ImageView
            android:id="@+id/indo_map"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/title"
            android:padding="16dp"
            android:src="@drawable/indo_map"/>

    <RelativeLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/indo_map"
            android:padding="16dp"
            android:background="@color/black"
            android:gravity="center">

        <TextView
                android:id="@+id/info_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATA DAN INFORMASI TERBARU DIRILIS SETIAP "
                android:textColor="@color/white"
                android:fontFamily="@font/sourcesanspro_semi_bold"/>

        <TextView
                android:id="@+id/info_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info_one"
                android:text="JAM 20.00 WIB"
                android:textColor="@color/yellow"
                android:fontFamily="@font/sourcesanspro_semi_bold"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info"
            android:paddingTop="16dp"
            android:gravity="center">

        <Button
                android:id="@+id/started_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Mulai"
                android:textColor="@color/black"
                android:background="@drawable/less_rounded_light_grey"
                android:fontFamily="@font/sourcesanspro_semi_bold"/>
    </RelativeLayout>

</RelativeLayout>