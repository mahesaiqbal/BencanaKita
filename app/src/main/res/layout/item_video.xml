<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

    <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/cold">

        <TextView
                android:id="@+id/title_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Judul Konten"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/sourcesanspro_semi_bold"/>

    </LinearLayout>

    <ImageView
            android:id="@+id/img_content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/earthquake"
            android:layout_below="@id/title"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_below="@id/img_content">

        <TextView
                android:id="@+id/detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="Sebagian teks konten blablabla"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/sourcesanspro_regular"/>

    </LinearLayout>

</RelativeLayout>